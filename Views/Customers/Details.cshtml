@model WebApplication1.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership type : @Model.MembershipType.NameOfMembershipType</li>
    @if (Model.birthDate.HasValue)
    {
    <li>Birth date : @Model.birthDate.Value.ToShortDateString()</li>
    }
    <li>Movies rented: </li>
    <ul>
        @foreach (var m in Model.Movies)
        {
            <li>@Html.ActionLink(m.Name, "Details","Movies", new { id = m.Id}, null)</li>
        }
    </ul>
</ul>