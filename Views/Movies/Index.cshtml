@model IEnumerable<WebApplication1.Models.Movie>
@{
    ViewBag.Title = "MoviesList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies List</h2>
<input type="button" class="btn btn-primary" value="New" onclick="@("window.location.href='" + @Url.Action("New", "Movies") + "'");" />
<br>
<br>
@if (!Model.Any())
{
    <text>There are no movies available right now.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre</td>
                </tr>
            }
        </tbody>
    </table>

    
}
